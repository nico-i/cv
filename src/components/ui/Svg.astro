---
export type Props = {
  size?: 'sm' | 'md' | 'lg';
  className?: string;
  svgUrl?: string;
  svgHtml?: string;
};

const { className, svgUrl, svgHtml, size = 'sm' }: Props = Astro.props;

let html: string;
if (svgUrl) {
  html = await fetch(svgUrl).then((res) => res.text());
} else {
  html = svgHtml!;
}

const classesBySize = {
  sm: 'w-4 h-4',
  md: 'w-5 h-5',
  lg: 'w-6 h-6',
};
---

<span
  class:list={['inline-block', classesBySize[size], className]}
  set:html={html}
/>
